@model MVCRestaurant.ViewModels.User.UserViewModel

@{
    Layout = null;
}

<h3>آیا میخواهید این کاربر را حذف نمایید؟</h3>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.userName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.userName)
    </dd>
</dl>
    
<form id="form-ajax" asp-action="Delete" data-ajax-mode="replace">
    @Html.HiddenFor(x => x.userId)
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input id="__SUB" type="submit" value="Delete" class="btn btn-danger" hidden/>
</form>

<script>
    // DeclareModal.setAjaxUpdateId is defined in site.js
    $("#form-ajax").on("customEvent", DeclareModal.EnhanceAjaxForm);
    $("#form-ajax").trigger("customEvent");
</script>