@model MVCRestaurant.ViewModels.FoodCategoryViewModel

@{
    Layout = null;
}

<form asp-action="Edit" id="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="name" class="control-label"></label>
            <input asp-for="name" class="form-control" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Icon" class="control-label"></label>
            <input asp-for="Icon" class="form-control" />
            <span asp-validation-for="Icon" class="text-danger"></span>
        </div>
    </div>
    @Html.HiddenFor(x => Model.id)
    <div class="form-group">
        <input id="__SUB" type="submit" value="Edit" class="btn btn-primary" hidden/>
    </div>
</form>

<script>
    //alert("new edit modal!")
    $("#form").on("customEvent", DeclareModal.EnhanceAjaxForm);
    $("#form").trigger("customEvent");
</script>